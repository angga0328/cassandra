<%= simple_form_for(@pola) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :bnpb %>
    <%= f.input :h1 %>
    <%= f.input :h2 %>
    <%= f.input :h3 %>
    <%= f.input :h4 %>
    <%= f.input :h5 %>
    <%= f.input :h6 %>
    <%= f.input :h7 %>
    <%= f.input :polanya %>
    <%= f.input :keterangan %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
