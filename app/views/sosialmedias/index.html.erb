<p id="notice"><%= notice %></p>

<h2>Import Products</h2>
<%= form_tag import_sosialmedias_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<h1>Sosialmedias</h1>

<table>
  <thead>
    <tr>
      <th>Tanggal</th>
      <th>Link</th>
      <th>Bencana</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sosialmedias.each do |sosialmedia| %>
      <tr>
        <td><%= sosialmedia.tanggal %></td>
        <td><%= sosialmedia.link %></td>
        <td><%= sosialmedia.bencana %></td>
        <td><%= link_to 'Show', sosialmedia %></td>
        <td><%= link_to 'Edit', edit_sosialmedia_path(sosialmedia) %></td>
        <td><%= link_to 'Destroy', sosialmedia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sosialmedia', new_sosialmedia_path %>
