<%= simple_form_for(@bmkg) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tanggal %>
    <%= f.input :suhu_min %>
    <%= f.input :suhu_max %>
    <%= f.input :suhu_rata %>
    <%= f.input :kelembaban_rata %>
    <%= f.input :curah_hujan %>
    <%= f.input :lama_penyinaran %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
