<p id="notice"><%= notice %></p>

<h2>Import Products</h2>
<%= form_tag import_twitters_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<h1>Twitters</h1>

<table>
  <thead>
    <tr>
      <th>Tanggal</th>
      <th>Post</th>
      <th>Bencana</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twitters.each do |twitter| %>
      <tr>
        <td><%= twitter.tanggal %></td>
        <td><%= twitter.post %></td>
        <td><%= twitter.bencana %></td>
        <td><%= link_to 'Show', twitter %></td>
        <td><%= link_to 'Edit', edit_twitter_path(twitter) %></td>
        <td><%= link_to 'Destroy', twitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Twitter', new_twitter_path %>
